<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BuyFastUI</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BuyFastUI.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>

    <!-- Header -->
    <header class="d-flex justify-content-between align-items-center p-3 shadow-sm bg-white">
        <div class="d-flex align-items-center">
            <a class="navbar-brand fw-bold fs-4 text-dark" asp-area="" asp-controller="Product" asp-action="Index">
                🛍️ BuyFast
            </a>
            <button class="btn btn-warning ms-3">Каталог товаров</button>
        </div>
        <div class="flex-grow-1 mx-4">
            <input type="text" class="form-control" placeholder="название товара или артикул" />
        </div>
        <div class="d-flex gap-4 align-items-center">
            <div>📍 Панчакент</div>
            <div>👤 Профиль</div>
            <div>🛒 Корзина</div>
        </div>
    </header>

    <!-- Body layout with Sidebar -->
    <div class="d-flex">
        <!-- Sidebar -->
        <aside class="bg-light p-3" style="width: 260px; height: calc(100vh - 64px); overflow-y: auto;">
            <ul class="nav flex-column">
                <li class="nav-item"><a class="nav-link active" href="#">Скидки</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Бренды</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Продуктовые наборы</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Подарки</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Смартфоны</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Бытовая техника</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Наушники</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Компьютеры</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Туры</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Одежда</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Обувь</a></li>
            </ul>
        </aside>

        <!-- Main Content -->
        <main class="flex-grow-1 p-4">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="border-top footer text-muted mt-3">
        <div class="container">
            &copy; 2025 - BuyFastUI - <a asp-area="" asp-controller="Product" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
