<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BuyFastUI</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BuyFastUI.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
            <div class="container">
                <a class="navbar-brand fw-bold fs-5" asp-area="" asp-controller="Product" asp-action="Index">
                    🛍️ BuyFast
                </a>

                <button class="btn btn-warning ms-4" id="loadCategoriesBtn">Каталог товаров</button>
                <div id="categoryContainer" class="mt-2"></div>

                <div class="flex-grow-1 mx-4">
                    <input type="text" class="form-control" placeholder="Название товара или артикул" />
                </div>            

                @if (User.Identity.IsAuthenticated)
                {
                    <form asp-controller="Account" asp-action="Logout" method="post">
                        <button type="submit" class="btn btn-link">Logout</button>
                    </form>
                }
                else
                {
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav ms-auto">
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Product" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="Dashboard">📍 Панчакент</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Login">👤 Профиль</a>
                            </li>
                                <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Login1">🛒 Корзина</a>
                            </li>
                        </ul>
                    </div>
                }
            </div>
        </nav>
    </header>

    <!-- Body layout with Sidebar -->
    <div class="d-flex">
        <!-- Sidebar -->
        <aside class="bg-light p-3" style="width: 260px; height: calc(100vh - 64px); overflow-y: auto;">
            <ul class="nav flex-column">
                <li class="nav-item"><a class="nav-link active" href="#">Скидки</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Бренды</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Продуктовые наборы</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Подарки</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Смартфоны</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Бытовая техника</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Наушники</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Компьютеры</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Туры</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Одежда</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Обувь</a></li>
            </ul>
        </aside>

        <!-- Main Content -->
        <main class="flex-grow-1 p-4">
            @RenderBody()
        </main>
    </div>

    @await Html.PartialAsync("_Footer")


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>


