@using Microsoft.AspNetCore.Mvc.TagHelpers
@model List<BuyFastDTO.ProductResponse>
@{
    ViewBag.Title = "Product List";
}
<div class="container mt-4">
    
    @if (Model != null && Model.Any())
    {
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
            @foreach (var product in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm border-0">
                        <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" style="object-fit: cover; height: 200px;" />
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text text-muted small">@product.Description</p>
                            <p class="card-text mt-auto fw-bold text-primary">$@Math.Round(product.Price,2)</p>
                        </div>
                        <div class="card-footer bg-white border-top-0 d-flex justify-content-between">
                            <a class="btn btn-outline-primary btn-sm"
                               href="@Url.Action("Details", "Product", new { id = product.Id })">
                                <i class="bi bi-info-circle"></i> Details
                            </a>
                            <a class="btn btn-success btn-sm"
                               href="@Url.Action("AddToCart", "Product", new { id = product.Id })">
                                <i class="bi bi-cart-plus"></i> Add to Cart
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-warning">No products found.</div>
    }
</div>
